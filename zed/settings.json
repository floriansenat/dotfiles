{
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark"
  },
  "ui_font_size": 14,
  "buffer_font_size": 13.5,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scrollbar": { "show": "never" },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "project_panel": { "button": false },
  "chat_panel": { "button": false },
  "collaboration_panel": { "button": false },
  "notification_panel": { "button": false },
  "gutter": {
    "code_actions": false,
    "runnables": false,
    "folds": false
  },
  "indent_guides": {
    // "enabled": false,
    "line_width": 1,
    "active_line_width": 3
  },
  "code_actions_on_format": {
    "source.fixAll.eslint": true
  },
  "vim_mode": true,
  "git": {
    "inline_blame": { "enabled": false }
  },
  "terminal": {
    "button": false,
    "line_height": "standard",
    "env": { "GIT_EDITOR": "zed-preview --wait" }
  },
  "assistant": {
    "version": "1",
    "button": false
  },
  "features": {
    "inline_completion_provider": "none"
  }
}
