theme = dark:catppuccin-mocha,light:catppuccin-latte
font-family = Iosevka Curly Extended
font-size = 15
adjust-cell-height = 12
unfocused-split-opacity = 0.95
macos-titlebar-style = hidden
window-padding-x = 12
window-padding-y = 12
window-save-state = always
auto-update = download

# Splits
keybind = ctrl+space>h=new_split:left
keybind = ctrl+space>l=new_split:right
keybind = ctrl+space>k=new_split:up
keybind = ctrl+space>j=new_split:down

keybind = ctrl+shift+z=toggle_split_zoom
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+j=goto_split:bottom
keybind = ctrl+shift+k=goto_split:top

# Tabs
keybind = ctrl+space>t=new_tab
keybind = ctrl+shift+[=previous_tab
keybind = ctrl+shift+]=next_tab

# Other
keybind = ctrl+space>c=open_config
keybind = ctrl+space>r=reload_config
keybind = global:cmd+escape=toggle_quick_terminal

