[includeIf "gitdir:~/"]
    path = ~/.gitconfig-personal
[includeIf "gitdir:~/work/"]
    path = ~/.gitconfig-work
[maintenance]
    repo = /Users/florian/work/v3
[diff]
    external = difft
[alias]
	st = status
	ss = status -s
	cb = checkout -b
	co = checkout
	ci = commit
	ap = add -p
	aa = add -A
	pf = push --force-with-lease --force-if-includes
	ll = log --pretty=format:'%s'
	fusion = rebase -i HEAD~2
	gone = ! git fetch -p && git for-each-ref --format '%(refname:short) %(upstream:track)' | fgrep '[gone]' | cut -d' ' -f1 | xargs -r git branch -D
	last = log -1 HEAD
	unstage = reset HEAD --
	up = ! git switch master && git fetch -p --tags && git pull && git switch -
	sync = ! git up && git rebase master && git pf
